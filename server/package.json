  "scripts": {
    "start": "npm run build && node dist/index.js",
    "watch": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' src/index.ts",
    "prebuild": "cd ../client && npm run build",
    "build": "npm run clean && npm run compile",
    "postbuild": "npx recursive-copy '../client/dist' './dist/dist'",
    "postinstall": "replace-in-files --string='resolvePkg(\"leaflet\")' --replacement='require(\"path\").join(__dirname, \"..\", \"..\", \"leaflet\")' node_modules/leaflet-map-server-component/src/index.js",
    "compile": "tsc -b && npx cpy --cwd=src --parents '**/*.json' '../dist/'",
    "clean": "rimraf -rf ./dist",
    "test": "nyc --reporter=nyc-report-lcov-absolute mocha -r ts-node/register tests/**/*.test.ts --timeout 10000 --exit"
  },
